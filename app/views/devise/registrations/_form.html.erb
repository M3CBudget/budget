<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { role: "form" }) do |f| %>
    <div class="form-group">
      <%= f.label :first_name, "Vorname" %>
      <%= f.text_field :first_name, class: "form-control", :placeholder => "Vorname" %>
    </div>
    <div class="form-group">
      <%= f.label :last_name, "Nachname" %>
      <%= f.text_field :last_name, class: "form-control", :placeholder => "Nachname"  %>
    </div>
    <div class="form-group">
      <%= f.label :email, "E-Mail" %>
      <%= f.email_field :email, class: "form-control", :placeholder => "E-Mail"  %>
    </div>
    <div class="form-group">
      <%= f.label :password, "Passwort" %><br />
      <%= f.password_field :password, class: "form-control", :placeholder => "Passwort"  %>
    </div>
    <div class="form-group">
      <%= f.label :password_confirmation, "Passwort wiederholen"  %>
      <%= f.password_field :password_confirmation, class: "form-control", :placeholder => "Passwort wiederholen"  %>
    </div>
    <%= f.submit t('Anmelden', :default => "Anmelden!"), class: "btn btn-default" %>
<% end %>
