<%= form_for(@vendor, :html => {:multipart => true}) do |f| %>
  <% if @vendor.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@vendor.errors.count, "error") %> prohibited this vendor from being saved:</h2>

      <ul>
      <% @vendor.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Anlegen</h3>
  </div>
  <div class="panel-body">
    <%= f.hidden_field :user_id, :value => current_user.id %>

    <div class="col-xs-6">
      <div class="form-group">
        <label>Name:</label>
        <%= f.text_field :name, :class =>"form-control", :placeholder => "Name" %>
      </div>
    </div>

    <div class="col-xs-6">

    </div>


      <div class="col-xs-12">
        <div class="form-group">
          <label>Logo upload:</label>
          <%= f.file_field :logo, :class =>"form-control btn btn-default btn-file", :placeholder => "Logo" %>
        </div>
      </div>







  </div>

<div class="panel-footer">
  <%= f.submit "Neu Anlegen" , :class => "btn btn-default" %>
</div>




</div>
<% end %>