<h1>Listing baskets</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Vendor</th>
      <th>Payment</th>
      <th>Amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @baskets.each do |basket| %>
      <tr>
        <td><%= basket.created_at.strftime("%d/%m/%Y")  %></td>
        <td><%= show_vendor_name(basket.vendor_id) %></td>
        <td><%= show_payment_name(basket.payment_id) %></td>
        <td><%= basket.amount %></td>
        <td><%= link_to 'Show', basket %></td>
        <td><%= link_to 'Edit', edit_basket_path(basket) %></td>
        <td><%= link_to 'Destroy', basket, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Basket', new_basket_path %>
