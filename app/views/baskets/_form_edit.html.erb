<%= form_for(@basket) do |f| %>
  <% if @basket.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@basket.errors.count, "error") %> prohibited this basket from being saved:</h2>

      <ul>
      <% @basket.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :notice %><br>
    <%= f.text_field :notice %>
  </div>
  <div class="field">
    <%= f.label :amount %><br>
    <%= f.text_field :amount %>
  </div>
  <div class="field">
    <%= f.label :document %><br>
    <%= f.text_field :document %>
  </div>
  <div class="field">
    <%= f.label :user_id %><br>
    <%= f.text_field :user_id %>
  </div>
  <div class="field">
    <%= f.label :payment_id %><br>
    <%= f.text_field :payment_id %>
  </div>
  <div class="field">
    <%= f.label :vendor_id %><br>
    <%= f.collection_select :vendor_id, Vendor.all, :id, :name, multiple: false %>
  </div>
  <div class="field">
    <table>
      <tr>
        <th>Name</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Category</th>
        <th>Delete</th>
      </tr>
      <%= f.fields_for :items do |items_form| %>
          <tr>
            <td><%= items_form.text_field :name %></td>
            <td><%= items_form.text_field :price %></td>
            <td><%= items_form.text_field :quantity %></td>
            <td><%= items_form.text_field :category_id %></td>
            <td><%= items_form.check_box :_destroy%></td>
          </tr>
      <% end %>
    </table>

  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
