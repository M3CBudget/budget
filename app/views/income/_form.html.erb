<%= form_for(@income) do |f| %>
<% if @income.errors.any? %>
<div id="error_explanation">
    <h2><%= pluralize(@income.errors.count, "error") %> prohibited this income from being saved:</h2>

    <ul>
        <% @income.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
    </ul>
</div>
<% end %>
<div class="field">

    <%= f.label :category_id %><br>
    <%= f.collection_select :category_id, Category.where(:income => true), :id, :name, multiple: false %>
  <select class="selectpicker"></select>
</div>

<div class="field">
   <%= f.label :name %><br>
   <%= f.text_field :name %>
</div>
    
<div class="field">
    <%= f.label :category_id %><br>
    <%= f.collection_select :category_id, Category.where(:income => true, :user_id => current_user.id ), :id, :name, multiple: false %>
</div>
<div class="field">
  <%= f.hidden_field :user_id, :value => current_user.id %>
</div>
<div class="field">
   <%= f.label :notice %><br>
   <%= f.text_field :notice %>
</div>
<div class="field">
    <%= f.label :value %><br>
    <%= f.text_field :price %>
</div>
<div class="field">
    <%= f.hidden_field :income, :value => true %>
</div>
<div class="field">
    <%= f.label :period_id %><br>
    <%= f.collection_select :period_id, Period.all, :id, :name, multiple:false %>
</div>
<div class="field">
    <%= f.label :launch %><br>
    <%= f.date_select :launch %>
  <input type="text" data-provide='datepicker' >
</div>
<div class="field">
    <%= f.label :finish %><br>
    <%= f.date_select :finish %>
  <input type="text" data-provide='datepicker' >
</div>
<div class="actions">
    <%= f.submit "Einnahme anlegen" %>
</div>
<% end %>
