<h1>Listing items</h1>

<table>
  <thead>
    <tr>
      <th>Basket</th>
      <th>Category</th>
      <th>Article</th>
      <th>User</th>
      <th>Name</th>
      <th>Quantity</th>
      <th>Price</th>
      <th>Notice</th>
      <th>Income</th>
      <th>Period</th>
      <th>Launch</th>
      <th>Finish</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.basket %></td>
        <td><%= item.category %></td>
        <td><%= item.article %></td>
        <td><%= item.user %></td>
        <td><%= item.name %></td>
        <td><%= item.quantity %></td>
        <td><%= item.price %></td>
        <td><%= item.notice %></td>
        <td><%= item.income %></td>
        <td><%= item.period %></td>
        <td><%= item.launch %></td>
        <td><%= item.finish %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Item', new_item_path %>
