                <%= f.text_field :name, :class =>"form-control", :placeholder => "Name" %>
            </div>
          </div>
        </div>

        <div class="col-xs-6">
          <div class="form-group">
            <label class="" for="">Nummer:</label>
            <div class="input-group">
              <div class="input-group-addon"><i class="fa fa-university"></i></div>
              <%= f.text_field :number, :class =>"form-control", :placeholder => "BIC" %>
            </div>
          </div>
        </div>

        <div class="col-xs-6">
          <div class="form-group">
            <label class="" for="">BIC:</label>
            <div class="input-group">
              <div class="input-group-addon"><i class="fa fa-university"></i></div>
              <%= f.text_field :bic, :class =>"form-control", :placeholder => "BIC" %>
            </div>

          </div>
        </div>

      </div>

      <div class="panel-footer">
        <%= f.submit "Speichern" , :class => "btn btn-default" %>
      </div>
