<%= form_for(@payment) do |f| %>
  <% if @payment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@payment.errors.count, "error") %> prohibited this payment from being saved:</h2>

      <ul>
      <% @payment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="form-group">

  <div class="col-xs-6">
    <%= f.check_box :active, :checked => true %>
    <%= f.label :active %><br>
  </div>
  <div class="col-xs-6">
    <%= f.hidden_field :user_id, :value => current_user.id %>
  </div>

  <div class="col-xs-12">

    <div class="input-group">
      <div class="input-group-addon"><i class="fa fa-file-text"></i></div>
      <%= f.text_field :name, :class =>"form-control", :placeholder => "Name" %>
    </div>
    <div class="input-group">
      <div class="input-group-addon"><i class="fa fa fa-university"></i></div>
      <%= f.text_field :number, :class =>"form-control", :placeholder => "IBAN" %>
    </div>
    <div class="input-group">
      <div class="input-group-addon"><i class="fa fa-university"></i></div>
      <%= f.text_field :bic, :class =>"form-control", :placeholder => "BIC" %>
    </div>

    <%= f.submit "Speichern" , :class => "btn btn-default" %>

  </div>
</div>
<% end %>