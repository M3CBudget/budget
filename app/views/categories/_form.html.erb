<%= form_for(@category) do |f| %>
  <% if @category.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@category.errors.count, "error") %> prohibited this category from being saved:</h2>
      <ul>
      <% @category.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


<div class="form-group">

  <div class="col-xs-6">
    <%= f.check_box :income %>
    <%= f.label :income %>
    <%= f.hidden_field :user_id, :value => current_user.id %>
  </div>

  <div class="col-xs-6">
    <%= f.check_box :active, :checked => true %>
    <%= f.label :active %>
  </div>

    <div class="col-xs-12">
      <div class="input-group">
        <div class="input-group-addon"><i class="fa fa-font"></i></div>
        <%= f.text_field :name, :class =>"form-control", :placeholder => "Kategorie Name" %>
      </div>
      <div class="input-group">
        <div class="input-group-addon"><i class="fa fa-file-text-o"></i></div>
        <%= f.text_field :notice, :class =>"form-control", :placeholder => "Kategorie Notiz" %>
      </div>
      <%= f.submit "Speichern" , :class => "btn btn-default" %>

    </div>
</div>
<% end %>

