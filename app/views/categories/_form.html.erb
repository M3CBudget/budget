<%= form_for(@category) do |f| %>
    <% if @category.errors.any? %>
        <div id="error_explanation" class="alert fade in alert-danger">
          <h3><%= pluralize(@category.errors.count, "Fehler") %> beim anlegen einer Kategorie:</h3>
          <ul>
            <% @category.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>


<div class="panel panel-default">


    <div class="panel-heading">
        <h3 class="panel-title">Anlegen</h3>
    </div>

    <div class="panel-body">

        <div class="col-xs-6">
            <label>Einnahme: </label> <%= f.check_box :income %>
            <%= f.hidden_field :user_id, :value => current_user.id %>
        </div>

        <div class="col-xs-6">
            <div class="form-group">
              <label>Aktiv: </label>
                <%= f.check_box :active %>

            </div>
        </div>

        <div class="col-xs-12">
            <div class="form-group">
                <label class="" for="">Name: </label>
              <div class="input-group">
                <div class="input-group-addon"><i class="fa fa-file-text"></i></div>
                <%= f.text_field :name, :class =>"form-control", :placeholder => "Name" %>
              </div>
            </div>
        </div>


      <div class="col-xs-12">
        <div class="form-group">
          <label class="" for="">Symbol: </label>
          <div class="input-group">
            <%= f.collection_select(:glyphicon_id, Glyphicon.all, :id, :name, {multiple: false}, :class=>'selectpicker')%>
          </div>

        </div>
      </div>


      <div class="col-xs-12">
            <div class="form-group">
                <label class="" for="">Notiz: </label>
              <div class="input-group">
                <div class="input-group-addon"><i class="fa fa-file-text"></i></div>
                <%= f.text_area :notice, :class =>"form-control", :placeholder => "Notiz" %>
              </div>
            </div>
        </div>


    </div>

    <div class="panel-footer">
      <%= f.submit "Speichern" , :class => "btn btn-default" %>
    </div>

</div>

<% end %>