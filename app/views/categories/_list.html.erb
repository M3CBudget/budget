  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Kategorien</h3>
    </div>
    <div class="panel-body">

        <% Category.all.each do |category| %>
          <div class="col-lg-6">
            <%= link_to category.name, category_path(category), :class => 'btn btn-default', :role => 'button' %>
          </div>
      <% end %>

      <div class="col-lg-6">
        <%= link_to '+', new_category_path, :class => 'btn btn-default', :role => 'button' %>
      </div>
    </div>
  </div>