<div class="page-header">
  <h1> Categories
    <i class="fa fa-files-o pull-right"></i>
  </h1>
</div>

<% @categories.each do |category| %>
    <div class="col-xs-6 col-lg-4">

      <% if (category.active) %>
          <div class="panel panel-success">
      <% else %>
          <div class="panel panel-warning">
      <% end %>

          <div class="panel-heading">

            <h3 class="panel-title text-center">

              <% if (category.income) %>
                  <i class="fa fa-plus pull-left" data-toggle="tooltip" data-placement="left" title="Einnahme"></i>
              <% else %>
                  <i class="fa fa-minus pull-left" data-toggle="tooltip" data-placement="left" title="Ausgabe"></i>
              <% end %>

              <%= category.name %>

              <% if (category.active) %>
                  <i class="fa fa-check pull-right" data-toggle="tooltip" data-placement="left" title="Category ist aktiv"></i>
              <% else %>
                  <i class="fa fa-times pull-right" data-toggle="tooltip" data-placement="left" title="Category ist inaktiv"></i>
              <% end %>
            </h3>
          </div>
              <div class="panel-body">
                <p><%= category.notice %></p>

                <%= link_to 'Edit', edit_category_path(category), :class => 'btn btn-default', :role => 'button' %>
                <%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-default', :role => 'button' %>
              </div>
      </div>
    </div>
<% end %>



<br>

<%= link_to '+', new_category_path, :class => 'btn btn-default', :role => 'button' %>
